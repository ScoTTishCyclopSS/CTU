<Application x:Class="iur_sw_airportTable.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:iur_sw_airportTable"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:vm="clr-namespace:iur_sw_airportTable.ViewModel"
             xmlns:v="clr-namespace:iur_sw_airportTable.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <DataTemplate DataType="{x:Type vm:EditTripsViewModel}">
            <v:TripEditView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DemoTripsViewModel}">
            <v:TripDemoView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:LogInViewModel}">
            <v:LoginView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:UsersEditViewModel}">
            <v:UserView/>
        </DataTemplate>

        <Style x:Key="mainWindow" TargetType="Grid">
            <Setter Property="Background" Value="#06191D"/>
        </Style>

    </Application.Resources>
</Application>
